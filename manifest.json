{
  "manifest_version": 3,
  "name": "Vladi's Push extension",
  "version": "1.1.2",
  "permissions": ["notifications", "storage", "background", "activeTab"],
  "optional_permissions": ["cookies"],
  "optional_host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "src/settings-popup/popup.html",
    "default_title": "Push test",
    "default_icon": {
      "19": "images/disabled-19.png",
      "38": "images/disabled-38.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "options_page": "index.html",
  "update_url": "https://vladi.pages.dev/release/manifest.xml",
  "icons": {
    "16": "images/icon-16.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  }
}
